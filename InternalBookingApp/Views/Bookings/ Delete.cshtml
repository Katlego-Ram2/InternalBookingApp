@model InternalBookingApp.Models.Booking
@{
    ViewData["Title"] = "Delete Booking";
}
<h2>Delete Booking</h2>
<p>Are you sure you want to delete this booking?</p>
<dl class="row">
    <dt class="col-sm-2">Resource</dt>
    <dd class="col-sm-10">@Model.Resource.Name</dd>
    <dt class="col-sm-2">Start</dt>
    <dd class="col-sm-10">@Model.StartTime</dd>
    <dt class="col-sm-2">End</dt>
    <dd class="col-sm-10">@Model.EndTime</dd>
</dl>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Bookings" class="btn btn-secondary">Cancel</a>
</form>
