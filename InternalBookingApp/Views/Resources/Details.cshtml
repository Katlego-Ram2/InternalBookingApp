@model InternalBookingApp.Models.Resource
@{
    ViewData["Title"] = "Resource Details";
}
<h2>@Model.Name</h2>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Location:</strong> @Model.Location</p>
<p><strong>Capacity:</strong> @Model.Capacity</p>
<p><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>

<h4>Bookings</h4>
@if (Model.Bookings.Any())
{
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Start</th>
            <th>End</th>
            <th>Booked By</th>
            <th>Purpose</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model.Bookings)
        {
        <tr>
            <td>@booking.StartTime</td>
            <td>@booking.EndTime</td>
            <td>@booking.BookedBy</td>
            <td>@booking.Purpose</td>
        </tr>
        }
    </tbody>
</table>
}
else
{
<p>No bookings yet.</p>
}
<a href="/Resources/Index" class="btn btn-secondary">Back</a>
